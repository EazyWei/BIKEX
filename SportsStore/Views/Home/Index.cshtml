@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/theme.css"/>
</head>
<body>
    <div>

        <div class="align-items-center">
            <h1>BikeX<span style="font-style:italic; font-family:monospace; font-size:22px; color:white;"> Discover your dream ride.</span></h1>
        </div>

        <h2 style=" color: #00874c">New Releases</h2>
        <!-- ELEMENT 1 New Releases Deck Using Bootstrap Card-Deck -->

        <div class="card-deck">

            <div class="card bg-light">
                <img class="card-img-top" src="~/images/size1/bike2.png"/>
                <div class="card-body">
                    <h5 class="card-title align-text-bottom">Rehman SuperBikeX</h5>
                    <p class="card- align-text-bottom">A limited time RehmanXBikex EBike, The SuperBikeX is fitted with the
                    best of quality frame design from Rehman Bikes and the power of BikeX electric...</p>
                </div>
            </div>

            <div class="card bg-light">
                <img class="card-img-top" src="~/images/size1/scooter1.png" />
                <div class="card-body">
                    <h5 class="card-title align-text-bottom">Rehman ScootrZ</h5>
                    <p class="card- align-text-bottom">The Rehman ScootrZ is a very durable and fun
                    scooter with a Rehman Battery that holds...</p>
                </div>
            </div>

            <div class="card bg-light align-text-bottom">
                <img class="card-img-top" src="~/images/size1/hoverboard1.png" />
                <div class="card-body">
                    <h5 class="card-title align-text-bottom">Techsoles BalancerBoard</h5>
                    <p class="card- align-text-bottom">Techsoles BalancerBoard is a zippy and fun to use scooter that
                    comes with an weight activated balancing mode to provide more precise...</p>
                </div>
            </div>

        </div>

    </div>

    <h2 style="margin-top:50px">Shop</h2>

    <!-- ELEMENT 2 Bike MAIN DISPLAY -->
    <div class="card bg-light text-dark rounded mx-auto">

        <img src="~/images/bikethumb.jpg" class="img-fluid" style="max-height:800px" />
        <div style="background-color:black;" class="text-lg-center">
            <a class="card-link font-weight-bold" style="font-family: 'Segoe UI'; font-size: 42px; color: white;"
               asp-action="List"
                    asp-controller="Product"
                    asp-route-category="Bikes"
                    asp-route-page="1">Shop Bikes</a>
        </div>

    </div>


    <!-- ELEMENT 3 Scooter AND Hoverboard DISPLAY -->
    <div class="card-deck" style="margin-top:50px;">

        <div class="card bg-light text-dark rounded mx-auto" style="margin-right:10px">

            <img src="~/images/scooterthumb.jpg" class="img-fluid" style="max-height:400px; height:500px" />
            
            <div style="background-color:black;" class="text-lg-center">
                <a class="card-link font-weight-bold" style="font-family: 'Segoe UI'; font-size: 42px; color: white;"
                    asp-action="List"
                    asp-controller="Product"
                    asp-route-category="Scooters"
                    asp-route-page="1">Shop Scooters</a>
            </div>

        </div>

        <div class="card bg-light text-dark rounded mx-auto">

            <img src="~/images/hoverboardthumb.jpg" class="img-fluid" style="max-height:400px; height:500px" />
       
            <div style="background-color:black;" class="text-lg-center">
                <a class="card-link font-weight-bold" style="font-family: 'Segoe UI'; font-size: 42px; color: white;"
                    asp-action="List"
                    asp-controller="Product"
                    asp-route-category="Hoverboards"
                    asp-route-page="1">Shop Hoverboards</a>
            </div>

        </div>

    </div>

</body>

</html>
